{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="btn-close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
            </div>
            <div class="card-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="entry_Id">{{ entry_Id }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="parcelpro_Id" value="{{ parcelpro_Id }}" placeholder="{{ parcelpro_Id }}" id="parcelpro_Id" class="form-control"/>
                            {% if error_parcelpro_Id %}
                                <div class="text-danger">{{ error_parcelpro_Id }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="entry_ApiKey">{{ entry_ApiKey }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="parcelpro_ApiKey" value="{{ parcelpro_ApiKey }}" placeholder="{{ parcelpro_ApiKey }}" id="parcelpro_ApiKey" class="form-control"/>
                            {% if error_parcelpro_ApiKey %}
                                <div class="text-danger">{{ error_parcelpro_ApiKey }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="entry_Webhook">{{ entry_Webhook }}</label>
                        <div class="col-sm-10">
                            <input disabled type="text" name="parcelpro_Webhook" value="{{ parcelpro_Webhook }}" placeholder="{{ parcelpro_Webhook }}" id="parcelpro_Webhook" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}